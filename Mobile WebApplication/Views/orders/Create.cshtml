@model Mobile_WebApplication.Models.items

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div>
    <h4>items</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.itemname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.itemname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.info)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.info)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.itemsquantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.itemsquantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cataid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cataid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.company)
        </dd>

        <dd>
            <img src="~/images/@Model.imgfile" height="150" />
            <br />@Model.imgfile

        </dd>

    </dl>
</div>

<h4>orders</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <input type="hidden"  name="itemid" value="@Model.Id" />
           
            <div class="form-group">
                <label class="control-label">quantity</label>
                <input name="quantity" class="form-control" id= "qu" onchange="gettotal()" />
                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Buy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section scripts{
    <script>
        function gettotal() {

            tot = 0;
            var q = document.getElementById('qu').value;
            var pr = '@Model.price';
            tot = q * pr;
            document.getElementById("tot").innerHTML = "total  =" + tot;
        }
    </script>
  
}

